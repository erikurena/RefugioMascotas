@model RefugioMascotas.Models.Adopcion

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registrar Adopción</h1>

<hr />
<div class="card">
    <div class="card-header">

        <h4>Adoptante</h4>
       
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-ms-4">
                    <partial name="~/Views/Adoptantes/Create.cshtml" model="new Adoptante()"></partial>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Nombre Mascota</label>
                        <select asp-for="IdMascota" class="form-control form-select" asp-items="ViewBag.listaMascotas"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaAdopcion" class="control-label"></label>
                        <input type="date" asp-for="FechaAdopcion" class="form-control" />
                        <span asp-validation-for="FechaAdopcion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

    </div>
</div>


