@model RefugioMascotas.Models.Mascota

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

    <div class="card">
        <div class="card-header">
            <h4>Mascota</h4>
        </div>
        <div class="card-body">
            <dl class="row  justify-content-md-center">
                <div class="col-4">
                    <dd class="w-100">
                        @{
                            if (Model.FotoMascota != null)
                            {
                                <img src="~/fotoMascotas/@Model.FotoMascota" width="100%" height="300px" />
                            }
                        }
                    </dd>
                </div>

                <div class=" col-4 d-flex flex-column">
                
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.SexoNavigation!.TipoSexo)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.SexoNavigation!.TipoSexo)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Edad)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Edad)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.FechaIngreso)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.FechaIngreso)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.EstadoAdopcionNavigation!.EstadodeAdopcion)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.EstadoAdopcionNavigation!.EstadodeAdopcion)
                    </dd>
                  
                </div>
                <div>
                    <a asp-action="Index">Volver a la Lista</a>
                </div>
            </dl>
        </div>



    </div>



